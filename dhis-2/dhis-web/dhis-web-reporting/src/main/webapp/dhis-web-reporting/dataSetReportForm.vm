<style type="text/css" media="print">
div#header {
    display: none;
}

div#leftBar {
    display: none;
}

div#control {
    display: none;
}

h3#dataset_report_header {
    display: none;
}

#download_buttons {
    display: none;
}

.gridTable {
    width: 100%;
}
