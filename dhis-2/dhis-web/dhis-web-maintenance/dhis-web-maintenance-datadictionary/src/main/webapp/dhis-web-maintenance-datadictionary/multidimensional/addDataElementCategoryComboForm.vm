      </tr>

    </tbody>
  </table>

	<p>
		<input type="submit" name="add" value="$i18n.getString( 'add' )" style="width:10em" />
		<input type="button" name="cancel" onclick="window.location.href='categoryCombo.action'" value="$i18n.getString( 'cancel' )" style="width:10em" />
	</p>

</form>
