	var i18n_confirm_delete = '$encoder.jsEscape( $i18n.getString( "confirm_delete_patient_attribute" ) , "'" )';
	var i18n_none = '$encoder.jsEscape( $i18n.getString( "none" ), "'")';	
    var i18n_yes = '$encoder.jsEscape( $i18n.getString( "yes" ) , "'")';
